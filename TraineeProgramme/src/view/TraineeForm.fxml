<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--stylesheets="@Trainee.css"-->

<BorderPane fx:id="borderPaneTraineeForm" maxHeight="-Infinity" minHeight="500.0" minWidth="600.0" prefHeight="500.0" prefWidth="600.0" stylesheets="@Trainee.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControlleTraineeForm">
   <top>
      <HBox prefHeight="60.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="header" prefHeight="60.0" prefWidth="600.0" text="Trainee Form" textAlignment="CENTER">
               <padding>
                  <Insets left="180.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </top>
   <left>
      <VBox alignment="TOP_RIGHT" prefHeight="400.0" prefWidth="180.0" spacing="20.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <Label fx:id="firstNameTraineeForm" prefHeight="25.0" prefWidth="100.0" text="First name *" />
            <Label fx:id="lastNameTraineeForm" prefHeight="25.0" prefWidth="100.0" text="Last name *" />
            <Label fx:id="birthdayTraineeForm" prefHeight="25.0" prefWidth="100.0" text="Birthday *" />
            <Label fx:id="addressTraineeForm" prefHeight="25.0" prefWidth="100.0" text="Address *" />
            <Label fx:id="schoolTraineeForm" prefHeight="25.0" prefWidth="100.0" text="School *" />
            <Label fx:id="emailTraineeForm" prefHeight="25.0" prefWidth="100.0" text="Email *" />
            <Label fx:id="locationTraineeForm" prefHeight="25.0" prefWidth="100.0" text="Location *" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox prefHeight="350.0" prefWidth="300.0" spacing="20.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <TextField fx:id="firstNameTrainee" prefHeight="25.0" prefWidth="200.0" promptText="First name">
               <VBox.margin>
                  <Insets right="150.0" />
               </VBox.margin></TextField>
            <TextField fx:id="lastNameTrainee" promptText="Last name">
               <VBox.margin>
                  <Insets right="150.0" />
               </VBox.margin></TextField>
            <DatePicker fx:id="birthdayTrainee" prefHeight="25.0" prefWidth="110.0" />
            <TextField fx:id="addressTrainee" prefHeight="25.0" prefWidth="212.0" promptText="Address">
               <VBox.margin>
                  <Insets right="150.0" />
               </VBox.margin></TextField>
            <TextField fx:id="schoolTrainee" prefHeight="25.0" prefWidth="225.0" promptText="School">
               <VBox.margin>
                  <Insets right="150.0" />
               </VBox.margin></TextField>
            <TextField fx:id="emailTrainee" promptText="Email">
               <VBox.margin>
                  <Insets right="150.0" />
               </VBox.margin></TextField>
            <ComboBox fx:id="locationTraineeComboBox" prefHeight="25.0" prefWidth="110.0" promptText="choose location" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox prefHeight="50.0" prefWidth="600.0" spacing="80.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addNewTrainee" onAction="#addNewTrainee" prefHeight="30.0" prefWidth="110.0" text="Ok">
</Button>
            <Button fx:id="cancel" onAction="#cancelTrainee" prefHeight="30.0" prefWidth="110.0" text="Cancel" />
         </children>
         <BorderPane.margin>
            <Insets right="80.0" />
         </BorderPane.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="180.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
